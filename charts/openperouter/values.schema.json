{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "openperouter",
    "description": "Default values for openperouter Helm chart.",
    "type": "object",
    "properties": {
      "nameOverride": {
        "type": "string",
        "description": "Override the chart's name."
      },
      "fullnameOverride": {
        "type": "string",
        "description": "Override the full name of the chart."
      },
      "rbac": {
        "type": "object",
        "description": "Configuration for RBAC settings.",
        "properties": {
          "create": {
            "type": "boolean",
            "description": "Specifies whether to install and use RBAC rules.",
            "default": true
          }
        },
        "default": {
          "create": true
        }
      },
      "openperouter": {
        "type": "object",
        "description": "Configuration for the openperouter component.",
        "properties": {
          "logLevel": {
            "type": "string",
            "description": "Controller log level. Must be one of: `debug`, `info`, `warn` or `error`.",
            "enum": [
              "debug",
              "info",
              "warn",
              "error"
            ],
            "default": "info"
          },
          "tolerateMaster": {
            "type": "boolean",
            "description": "Specifies if the controller should tolerate running on the master node.",
            "default": true
          },
          "image": {
            "type": "object",
            "description": "Configuration for the openperouter controller image.",
            "properties": {
              "repository": {
                "type": "string",
                "description": "The repository for the openperouter controller image.",
                "default": "quay.io/openperouter/router"
              },
              "tag": {
                "type": "string",
                "description": "The tag for the openperouter controller image."
              },
              "pullPolicy": {
                "type": "string",
                "description": "The pull policy for the openperouter controller image."
              }
            },
            "default": {
              "repository": "quay.io/openperouter/router"
            }
          },
          "updateStrategy": {
            "type": "object",
            "description": "update strategy type.",
            "properties": {
              "type": {
                "type": "string",
                "description": "StrategyType can be set to RollingUpdate or OnDelete.",
                "enum": [
                  "RollingUpdate",
                  "OnDelete"
                ],
                "default": "RollingUpdate"
              }
            },
            "default": {
              "type": "RollingUpdate"
            }
          },
          "serviceAccounts": {
            "type": "object",
            "description": "Configuration for service accounts.",
            "properties": {
              "create": {
                "type": "boolean",
                "description": "Specifies whether the ServiceAccounts should be created.",
                "default": true
              },
              "controller": {
                "type": "object",
                "description": "Configuration for the controller service account.",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "The name of the controller ServiceAccount to use. If not set and create is true, a name is generated using the fullname template."
                  }
                },
                "default": {}
              },
              "perouter": {
                "type": "object",
                "description": "Configuration for the perouter service account.",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "The name of the perouter ServiceAccount to use. If not set and create is true, a name is generated using the fullname template."
                  }
                },
                "default": {}
              },
              "annotations": {
                "type": "object",
                "description": "Annotations to add to the service accounts.",
                "additionalProperties": {
                  "type": "string"
                },
                "default": {}
              }
            },
            "default": {
              "create": true,
              "controller": {},
              "perouter": {},
              "annotations": {}
            }
          },
          "tolerations": {
            "type": "array",
            "description": "Tolerations to add to the controller pods.",
            "items": {
              "type": "object"
            },
            "default": []
          },
          "priorityClassName": {
            "type": "string",
            "description": "Priority class name for the controller pods.",
            "default": ""
          },
          "affinity": {
            "type": "object",
            "description": "Affinity settings for the controller pods.",
            "default": {}
          },
          "runtimeClassName": {
            "type": "string",
            "description": "Selects which runtime class will be used by the pod.",
            "default": ""
          },
          "podAnnotations": {
            "type": "object",
            "description": "Annotations to add to the controller pods.",
            "additionalProperties": {
              "type": "string"
            },
            "default": {}
          },
          "labels": {
            "type": "object",
            "description": "Labels to add to the controller pods.",
            "properties": {
              "app": {
                "type": "string",
                "default": "openperouter"
              }
            },
            "default": {
              "app": "openperouter"
            }
          },
          "controller": {
            "type": "object",
            "description": "Resource requests and limits for the controller container.",
            "properties": {
              "resources": {
                "type": "object",
                "description": "Resource requirements.",
                "properties": {
                  "limits": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  },
                  "requests": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  }
                },
                "default": {}
              }
            },
            "default": {}
          },
          "nodemarker": {
            "type": "object",
            "description": "Resource requests and limits for the nodemarker container.",
            "properties": {
              "resources": {
                "type": "object",
                "description": "Resource requirements.",
                "properties": {
                  "limits": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  },
                  "requests": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  }
                },
                "default": {}
              }
            },
            "default": {}
          },
          "grout": {
            "type": "object",
            "description": "Configuration for the optional grout DPDK dataplane sidecar.",
            "properties": {
              "enabled": {
                "type": "boolean",
                "description": "Enable grout sidecar for DPDK-accelerated L3 routing.",
                "default": false
              },
              "image": {
                "type": "object",
                "description": "Configuration for the grout container image.",
                "properties": {
                  "repository": {
                    "type": "string",
                    "description": "The repository for the grout image.",
                    "default": "quay.io/openperouter/grout"
                  },
                  "tag": {
                    "type": "string",
                    "description": "The tag for the grout image.",
                    "default": "latest"
                  },
                  "pullPolicy": {
                    "type": "string",
                    "description": "The pull policy for the grout image.",
                    "default": "IfNotPresent"
                  }
                },
                "default": {
                  "repository": "quay.io/openperouter/grout",
                  "tag": "latest",
                  "pullPolicy": "IfNotPresent"
                }
              },
              "resources": {
                "type": "object",
                "description": "Resource requests and limits for the grout container.",
                "properties": {
                  "limits": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  },
                  "requests": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  }
                },
                "default": {}
              },
              "testMode": {
                "type": "boolean",
                "description": "Enable test mode (no DPDK hardware required, uses TAP interfaces).",
                "default": false
              },
              "ealArgs": {
                "type": "string",
                "description": "DPDK EAL arguments (advanced configuration, production only).",
                "default": ""
              },
              "initScript": {
                "type": "string",
                "description": "Grout init script content with grcli commands to configure interfaces, routes, and VRFs.",
                "default": ""
              },
              "logLevel": {
                "type": "string",
                "description": "Grout log level.",
                "enum": ["emerg", "alert", "crit", "err", "warning", "notice", "info", "debug"],
                "default": "info"
              }
            },
            "default": {
              "enabled": false
            }
          },
          "frr": {
            "type": "object",
            "description": "FRR container specific configuration.",
            "properties": {
              "image": {
                "type": "object",
                "description": "Configuration for the image used for the FRR container.",
                "properties": {
                  "repository": {
                    "type": "string",
                    "description": "The repository for the image image used for the FRR container.",
                    "default": "quay.io/openperouter/router"
                  },
                  "tag": {
                    "type": "string",
                    "description": "The tag for the image used for the FRR container.",
                    "default": "main"
                  },
                  "pullPolicy": {
                    "type": "string",
                    "description": "The pull policy for the image used for the FRR container."
                  }
                },
                "default": {
                  "repository": "quay.io/openperouter/router",
                  "tag": "main"
                }
              },
              "resources": {
                "type": "object",
                "description": "Resource requests and limits for the FRR container.",
                "properties": {
                  "limits": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  },
                  "requests": {
                    "type": "object",
                    "additionalProperties": {
                      "type": [
                        "string",
                        "integer"
                      ]
                    }
                  }
                },
                "default": {}
              },
              "reloader": {
                "type": "object",
                "description": "Resource requests and limits for the FRR reloader container.",
                "properties": {
                  "resources": {
                    "type": "object",
                    "description": "Resource requirements.",
                    "properties": {
                      "limits": {
                        "type": "object",
                        "additionalProperties": {
                          "type": [
                            "string",
                            "integer"
                          ]
                        }
                      },
                      "requests": {
                        "type": "object",
                        "additionalProperties": {
                          "type": [
                            "string",
                            "integer"
                          ]
                        }
                      }
                    },
                    "default": {}
                  }
                },
                "default": {}
              }
            },
            "default": {
              "image": {
                "repository": "quay.io/frrouting/frr",
                "tag": "10.2.1"
              },
              "resources": {},
              "reloader": {}
            }
          },
          "cri": {
            "type": "string",
            "description": "cri to bind its socket, can be containerd or crio.",
            "enum": [
              "containerd",
              "crio"
            ],
            "default": "containerd"
          }
        },
        "default": {
          "logLevel": "info",
          "tolerateMaster": true,
          "image": {
            "repository": "quay.io/openperouter/router"
          },
          "updateStrategy": {
            "type": "RollingUpdate"
          },
          "serviceAccounts": {
            "create": true,
            "controller": {},
            "perouter": {},
            "annotations": {}
          },
          "tolerations": [],
          "priorityClassName": "",
          "affinity": {},
          "runtimeClassName": "",
          "podAnnotations": {},
          "labels": {
            "app": "openperouter"
          },
          "controller": {
            "resources": {}
          },
          "nodemarker": {
            "resources": {}
          },
          "grout": {
            "enabled": false
          },
          "frr": {
            "resources": {},
            "reloader": {}
          },
          "cri": "containerd"
        }
      },
      "crds": {
        "type": "object",
        "description": "Configuration for Custom Resource Definitions.",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Specifies whether to install CRDs.",
            "default": true
          },
          "validationFailurePolicy": {
            "type": "string",
            "description": "Defines how to handle validation failures for CRDs.",
            "enum": [
              "Ignore",
              "Warn",
              "Fail"
            ],
            "default": "Fail"
          }
        },
        "default": {
          "enabled": true,
          "validationFailurePolicy": "Fail"
        }
      }
    }
  }
